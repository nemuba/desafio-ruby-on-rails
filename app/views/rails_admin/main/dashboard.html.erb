<% if params[:store].present? %>
  <h2>
    <%= link_to @breadcamp.name, '/' %>
    > Produtos
  </h2>
  <% if @object.count > 0  %>
  <% @object.each do |product| %>
    <div class="col-xs-12 col-md-3 col-lg-3">
      <div class="thumbnail">
        <%= link_to  "/product/#{product._id}", class: 'img-responsive img-thumbnail' do %>
          <img src="<%= product.image.present? ? product.image.url  : 'https://via.placeholder.com/500x300' %>" />
        <% end %>
        <div class="caption">
          <h6><%= product.name %></h6>
          <p>
            Preço: <%= number_currency(product.price) %>
          </p>
          <p>Parcela em até: <%= product.plots %>X</p>
        </div>
      </div>
    </div>
  <% end %>
  <% else %>
  <div class="col-12">
    <p>Nenhum Produto </p>
  </div>
  <% end %>
<div class="col-12">
  <%= paginate(@object) %>
</div>
<% else %>
   <h2>Lojas</h2>
    <div class="list-group">
      <% @object.each do |store| %>
        <%= link_to store.name, "/?store=#{store._id}", class: 'list-group-item' %>
      <% end %>
    </div>
<% end %>