<div class="row">
   <div class="col-md-6" style="margin: 10px 5px;">
    <%= form_tag("/", method: :get) do %>
      <div class="input-group">
        <%= hidden_field_tag :store, @breadcamp._id %>
        <%= text_field_tag :search, "", class: 'form-control' %>
          <span class="input-group-btn">
            <%= submit_tag 'Pesquisar', class: 'btn btn-primary pull-left', style: 'margin-left: 10px;' %>
          </span>
          <span class="input-group">
            <%= link_to 'Todos os produtos', "/?store=#{params[:store]}", class: 'btn btn-link pull-left' %>
          </span>
      </div>
    <% end %>
   </div>
   </div>