<div class="col-xs-3 col-md-3 col-lg-3">
  <div class="thumbnail">
    <%= link_to  product.url do %>
      <img src="<%= product.image.present? ? product.image  : 'https://via.placeholder.com/500x300' %>" class="img-responsive img-thumbnail" />
    <% end %>
    <div class="caption">
      <h6><%= product.name %></h6>
      <p>
        Preço: <%= number_currency(product.price) %>
      </p>
      <p>Parcela em até: <%= product.plots %>X</p>
    </div>
  </div>
</div>