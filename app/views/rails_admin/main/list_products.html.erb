<h3>Lista de Produtos</h3>

<div class="row"></div>
  <% @object.products.each do |product| %>

  <% if product.image.present? %>
    <div class="col-xs-12 col-md-3 col-lg-3">
      <div class="thumbnail">
        <%= link_to  "/product/#{product._id}", class: 'img-responsive img-thumbnail' do %>
          <img src="<%= product.image.url %>" />
        <% end %>
        <div class="caption">
          <h6><%= product.name %></h6>
          <p>
            Preço: <%= number_currency(product.price) %>
          </p>
          <p>Parcela em até: <%= product.plots %>X</p>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
</div>
