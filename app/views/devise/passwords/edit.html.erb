<div class="card">
<div class="card-header bg-primary text-white">
  <h2>Alterar senha</h2>
</div>
<div class="card-body">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, "Nova Senha" %><br />
    <% if @minimum_password_length %>
      <em>O minimo de (<%= @minimum_password_length %> caracteres)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, placeholder: "Nova Senha" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmar nova senha" %><br />
    <%= f.password_field :password_confirmation, placeholder: "Confirmar senha" %>
  </div>

  <div class="form-group">
    <%= f.submit "Alterar senha", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>